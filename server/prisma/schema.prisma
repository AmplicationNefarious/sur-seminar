datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Apartment {
  address      String
  createdAt    DateTime      @default(now())
  description  String?
  id           String        @id @default(cuid())
  name         String
  price        Float
  reservations Reservation[]
  updatedAt    DateTime      @updatedAt
}

model Reservation {
  check            Check?
  clientEmail      String
  createdAt        DateTime  @default(now())
  endReservation   DateTime?
  id               String    @id @default(cuid())
  idApartment      Apartment @relation(fields: [idApartmentId], references: [id])
  idApartmentId    String
  startReservation DateTime
  updatedAt        DateTime  @updatedAt
}

model Check {
  amount          Float?
  createdAt       DateTime    @default(now())
  id              String      @id @default(cuid())
  idReservation   Reservation @relation(fields: [idReservationId], references: [id])
  idReservationId String      @unique
  paid            Boolean?
  updatedAt       DateTime    @updatedAt
}

model Renter {
  createdAt   DateTime @default(now())
  email       String
  id          String   @id @default(cuid())
  nameSurname String
  phoneNumber String?
  updatedAt   DateTime @updatedAt
}